<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_welcome"
        android:layout_centerHorizontal="true"
        android:layout_margin="6dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:textSize="16sp"
        android:id="@+id/hello"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_users"
        android:layout_below="@+id/hello"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:text="@string/button_search_users"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_repositories"
        android:layout_below="@id/button_users"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:text="@string/button_search_repositories"/>

</RelativeLayout>
